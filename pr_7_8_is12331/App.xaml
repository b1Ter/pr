<Application x:Class="pr_7_8_is12331.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:pr_7_8_is12331"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <Style x:Key="buttonClassic" TargetType="Button">
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Background" Value="Bisque"/>
            <Setter Property="Foreground" Value="SaddleBrown"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Padding" Value="7,3,7,3"/>
        </Style>

        <Style x:Key="textBlockClassic" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="SaddleBrown"/>
            <Setter Property="Margin" Value="10,4,0,1"/>
        </Style>
        
    </Application.Resources>
</Application>
