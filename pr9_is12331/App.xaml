<Application x:Class="pr9_is12331.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:pr9_is12331"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="btn" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="10,0,10,0"/>
            <Setter Property="Background" Value="#FFF5CD9C"/>
        </Style>
        <Style x:Key="textBlockClassic" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="SaddleBrown"/>
            <Setter Property="Margin" Value="10,4,0,1"/>
        </Style>
    </Application.Resources>
</Application>
